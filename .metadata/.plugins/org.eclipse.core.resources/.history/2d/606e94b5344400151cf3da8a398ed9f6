package com.sample.tictactoe;

import java.io.IOException;
import java.io.PrintWriter;
import java.lang.reflect.Array;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

public class PlayGame {
	public void getuserMoveAndRespond(HttpServletRequest request, HttpServletResponse response) throws Exception{
		HttpSession session = request.getSession(true);
		String systemSelectedpositions = null, userSelectedPositions = null;
		  if (!(session.isNew())){
			  systemSelectedpositions = (String) session.getAttribute("systemSelectedPos");
			  userSelectedPositions = (String) session.getAttribute("userSelectedPos");
		  }
		String[] systemPos = systemSelectedpositions.split(",");
		String[] userPos = userSelectedPositions.split(",");
		String userPositionString = request.getParameter("position");
		int userPosition = Integer.parseInt(userPositionString); 
		if ((systemPos.length + userPos.length) >= 8){
			response.setContentType("application/json");
	    	PrintWriter out = response.getWriter();
	    	out.print("{\"statusCode\":\"1115\",\"statusMessage\":\"Game Over!\"}");
			out.flush();
			return;
		}else{
			
		}
	}
	
	public int calculateNextMove (){
		
		return (Integer) null;
	}
}
